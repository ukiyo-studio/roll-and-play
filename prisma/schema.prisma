generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  played        Boolean  @default(false)
  tier          String?
  tierOrder     Int?
  bggId         Int?     @unique
  yearPublished Int?
  minPlayers    Int?
  maxPlayers    Int?
  playingTime   Int?
  thumbnailUrl  String?
  createdAt     DateTime @default(now())
}
